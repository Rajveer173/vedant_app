<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:top="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_color" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Main pill -->
    <item android:bottom="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/overlay_white_strong" />
            <corners android:radius="16dp" />
            <stroke android:width="0.5dp" android:color="@color/text_white" />
        </shape>
    </item>
</layer-list>
